<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" lang="es-ES">
        <title>Bienvenido a Carreras por La Rioja</title>
        <meta name="description" content="Aplicación de prueba de Desarrollo de Aplicaciones para Internet; Máster en Informática; Universidad de La Rioja." lang="es-ES">

        <link href="{{ asset('/bundles/appcorredoresrioja/css/carrerasrioja.css') }}" rel="stylesheet" media="all" type="text/css"> 
        <link href="{{ asset('/bundles/appcorredoresrioja/css/normalizar.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('/bundles/appcorredoresrioja/css/comun.css') }}" rel="stylesheet" type="text/css"/>

    </head>

    <body >
        <div class="logo">Carreras por La Rioja</div>

        <div class="sombra">
            <div class="nucleo">
                <div id="lang">
                    {% set locale = app.request.locale %}

                    {% if locale == 'es' %}
                        <span>Español</span>
                        <a href="{{ path('app_corredores_rioja_portada', { '_locale': 'en' }) }}">English</a>
                    {% elseif locale == 'en' %}
                        <a href="{{ path('app_corredores_rioja_portada', { '_locale': 'es' }) }}">Español</a>
                        <span>English</span>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="barra_menus">	
            <div class="pestanias">
                <div class="grupoPestanias">
                    <div class="pestaniaSel"><a href="{{ path('app_corredores_rioja_portada', {'_locale': app.request.locale})}}">{% trans from 'messages' %}menu.areaCorredores{% endtrans %}</a></div>
                    <div class="pestaniaNoSel"><a href="/organizaciones">{% trans from 'messages' %}menu.areaOrganizadores{% endtrans %}</a></div>
                    <div class="pestaniaNoSel"><a href="../../admin">Intranet</a></div>
                </div>
            </div>

        {% block menu %}{% endblock %}


        <div class="sombra">
            <div class="nucleo">
                <div id="migas">
                    <div class="clear"></div> 

                </div>

            {% block content %}{% endblock %}

            <div class="clear"></div>  
            <div class="separa"></div>

            <div class="pie">
                <span class="pie_izda">
                    <a href="mailto:ramon-maria.carnero@alum.unirioja.es">Contacto</a> </span>
                <span class="pie_dcha">
                    &copy; 2017 Ramón Mª Carnero Rojo  </span>
                <div class="clear"></div>  
            </div>

        </div>
        </body>
        </html>

